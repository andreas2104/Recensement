generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  adminId   Int      @id @default(autoincrement())
  nom       String   @unique
  password  String
  email     String   @unique
  contact   String   @unique
  createdAt DateTime @default(now())
}

model Personne {
  personneId      Int      @id @default(autoincrement())
  nom             String
  prenom          String
  sexe            String
  dateNaissance   DateTime
  lieuDeNaissance String
  CIN             String   @unique
  dateDelivree    DateTime
  lieuDelivrence  String
  profession      String
  nomPere         String?
  nomMere         String?
  adresseActuelle String
  ancienneAdresse String
  nationalite     String
  contact         String

  // Champs ajoutés
  statut      Statut  @default(ACTIF)
  estElecteur Boolean @default(false)

  createdAt DateTime @default(now())
}

enum Statut {
  ACTIF // encore dans le fokontany
  DEMENAGER // a déménagé ailleurs
  DECEDE // décès
}
